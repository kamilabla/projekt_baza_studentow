@model IEnumerable<MvcStrona.Models.Grupa>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jezyk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LiczbaUczestnikow)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataRozpoczecia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jezyk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LiczbaUczestnikow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataRozpoczecia)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IDgrupy">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IDgrupy">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IDgrupy">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
